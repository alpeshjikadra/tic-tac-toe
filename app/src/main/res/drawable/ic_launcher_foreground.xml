        <path
            android:strokeColor="@color/accent_blue"
            android:strokeWidth="3"
            android:pathData="M-24,-12 L24,-12" />
        <path
            android:strokeColor="@color/accent_blue"
            android:strokeWidth="3"
            android:pathData="M-24,12 L24,12" />
        
        <!-- X symbol -->
        <path
            android:strokeColor="@color/player_x_color"
            android:strokeWidth="4"
            android:strokeLineCap="round"
            android:pathData="M-20,-20 L-4,-4 M-4,-20 L-20,-4" />
        
        <!-- O symbol -->
        <circle
            android:strokeColor="@color/player_o_color"
            android:strokeWidth="4"
