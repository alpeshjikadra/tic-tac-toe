<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_background_hover"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/accent_blue"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_background_hover"/>
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="@color/accent_blue"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cell_background"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="@color/board_line_color"/>
        </shape>
    </item>
</selector>
